/* CLASSES */
	.hide 	{ display: none; }
	.left 	{ text-align: left !important; }
	.center { text-align: center; }
	.right 	{ text-align: right; }
	.clear {
		clear: both;
		display: block;
		height: 100%;
		overflow: hidden;
	}
	.fLeft {
		display: inline;
		float: left;
	}
	.fRight {
		display: inline;
		float: right;
	}
	.bold{
